    <script>
        window.onerror = function (msg, url, line, col, error) {
            var div = document.createElement('div');
            div.style.cssText = 'position:fixed;top:0;left:0;width:100%;height:100%;background:black;color:red;padding:20px;z-index:9999;font-family:monospace;overflow:auto;';
            div.innerHTML = '<h1>Runtime Error</h1><p>' + msg + '</p><pre>' + (error ? error.stack : '') + '</pre>';
            document.body.appendChild(div);
            return false;
        };
    </script>
